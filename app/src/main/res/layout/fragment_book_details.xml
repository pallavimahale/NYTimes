<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/book_image"
        android:layout_width="@dimen/dimen_150dp"
        android:layout_height="@dimen/dimen_200dp"
        android:layout_margin="@dimen/dimen_10dp"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/details_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_toEndOf="@id/book_image"
        android:padding="@dimen/dimen_5dp"
        android:textColor="@color/app_theme_color_grey"
        android:textSize="@dimen/size_14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/details_book_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_book_title"
        android:layout_toEndOf="@id/book_image"
        android:padding="@dimen/dimen_5dp"
        android:textColor="@color/app_theme_color_grey"
        android:textSize="@dimen/size_14sp"/>

    <TextView
        android:id="@+id/details_book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_book_description"
        android:layout_toEndOf="@id/book_image"
        android:padding="@dimen/dimen_5dp"
        android:textColor="@color/app_theme_color_grey"
        android:textSize="@dimen/size_14sp"/>

    <View
        android:id="@+id/line_separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/book_image"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:background="@color/app_theme_color_grey"/>

    <TextView
        android:id="@+id/history_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_separator"
        android:layout_margin="@dimen/dimen_10dp"
        android:padding="@dimen/dimen_5dp"
        android:text="@string/history_title"
        android:textColor="@color/app_theme_color_grey"
        android:textSize="@dimen/size_14sp"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/history_title">

        <TextView
            android:id="@+id/history_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:lineSpacingExtra="@dimen/dimen_5dp"
            android:paddingEnd="@dimen/dimen_10dp"
            android:paddingStart="@dimen/dimen_10dp"
            android:textSize="@dimen/size_14sp"/>
    </ScrollView>
</RelativeLayout>